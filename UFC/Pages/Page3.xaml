<Page x:Class="UFC.Pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UFC.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Page3">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox VerticalContentAlignment="Center" Text="page 3"/>
        <ListBox Grid.Row="1" Background="AliceBlue" Name="listBox" SelectionMode="Single" SelectionChanged="listBox_SelectionChanged">
            <ListBoxItem Content="Page2" />
            <ListBoxItem Content="Page4" />
            <ListBoxItem Content="Back" IsEnabled="{Binding IFloppyPages.CanGoBack, UpdateSourceTrigger=PropertyChanged}"/>
        </ListBox>
    </Grid>

</Page>
